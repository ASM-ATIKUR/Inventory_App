@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

@foreach (var employee in ViewBag.Employees)
{
    <div class="card mb-3">
        <div class="card-header">
            <h3>@employee.EmployeeName</h3>
            <p>@employee.EmployeePosition</p>
            <p>@employee.EmployeeAddress</p>
            <p>@employee.EmployeePhone</p>
            <p>@employee.EmployeeEmail</p>
        </div>
        <div class="card-body">
            <h4>Projects</h4>
            <ul>
                @foreach (var project in employee.Projects)
                {
                    <li>
                        <strong>@project.ProjectName:</strong> @project.ProjectDescription
                        <br />
                        <a href="@project.ProjectUrl" target="_blank">@project.ProjectUrl</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}



