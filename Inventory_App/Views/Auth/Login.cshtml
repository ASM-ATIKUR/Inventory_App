
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div style="position:fixed;left:0px;right:0px;bottom:0px;top:0px;margin:auto;border:1px solid #808080;width:400px;height:500px;background:lightblue;">
    <div style="width: 90%; height: 90%; position: absolute; left: 0px; right: 0px; top: 0px; bottom: 0px; margin: auto;">
        <form method="post" action="@Url.Action("Login","Auth")">
            <h3 style="text-align: center">Login</h3>
            <h4 style="text-align: center">Have an account?</h4>
            <div class="mb-3">
                <label for="userNameText" class="form-label">Email address</label>
                <input type="text" class="form-control" id="userNameText" aria-describedby="emailHelp" name="userNameText">
            </div>
            <div class="mb-3">
                <label for="passwordText" class="form-label">Password</label>
                <input type="password" class="form-control" id="passwordText" name="passwordText">
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button>
            <div id="message" class="form-text">@ViewBag.Message</div>
        </form>
    </div>
</div>

